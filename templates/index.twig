{# Extend the master layout template #}
{% extends '_layouts/general' %}

{% set info = {
  craftVersion: craft.app.getVersion(),
  environment: getenv('ENVIRONMENT')
} %}

{% block content %}

  {% for row in entry.pageContent.level(1).all() %}

    {% include '_components/containers/row' with {
      row: row,
      count: loop.index
    } %}

  {% endfor %}

{% endblock %}
